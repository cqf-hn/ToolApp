<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_view_height"
    android:background="@drawable/bg_title_view">

    <LinearLayout
        android:id="@+id/llTitleContent"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivTitleLeftIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingRight="5dp"
            android:scaleType="center"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/color_text_1"
            android:textSize="@dimen/text_size_18"
            android:visibility="gone"
            tools:text="啊哈哈哈"
            tools:visibility="visible" />


        <ImageView
            android:id="@+id/ivTitleRightIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:scaleType="center"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>


    <ImageView
        android:id="@+id/ivLeft"
        android:layout_width="@dimen/title_view_height"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivSecondLeft"
        android:layout_width="@dimen/title_view_height"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ivLeft"
        android:gravity="center"
        android:scaleType="center"
        android:visibility="gone"
        tools:visibility="visible" />


    <ImageView
        android:id="@+id/ivRight"
        android:layout_width="@dimen/title_view_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:scaleType="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/ivSecondRight"
        android:layout_width="@dimen/title_view_height"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ivRight"
        android:scaleType="center"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:textColor="@color/text_title_view_color_selector"
        android:textSize="@dimen/text_size_15"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvSecondLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/tvLeft"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_title_view_color_selector"
        android:textSize="@dimen/text_size_15"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingRight="10dp"
        android:textColor="@color/text_title_view_color_selector"
        android:textSize="@dimen/text_size_15"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvSecondRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/tvRight"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/text_title_view_color_selector"
        android:textSize="@dimen/text_size_15"
        android:visibility="gone"
        tools:text="返回"
        tools:visibility="visible" />

</RelativeLayout>